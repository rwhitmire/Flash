<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>flash example</title>
</head>
<body>
    @foreach (var flash in Request.GetFlashMessages())
    {
        <div>@flash.Type @flash.Message</div>
    }
    @RenderBody()
</body>
</html>